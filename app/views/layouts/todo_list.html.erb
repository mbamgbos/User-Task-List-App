<!DOCTYPE html>
<html>
<head>
  <title>Taskmanager</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
	<h1>Todo Listorama</h1>
</header>

<div id="primary">
  <% if flash[:message] %>
    <p class="flash-message"><%= flash[:message] %></p>
  <% end %>
  <%= yield %>
</div>

<div id="sidebar">
	<h2>Task List</h2>
		<ul>
			<% @all_task_lists.each do | task_list | %>
				<li><%= link_to task_list.name, task_list %></li>
			<% end %>
		</ul>
	<%= link_to 'New Task list', new_task_list_path %> <br>
	
	<% if session[:user_id] %>
		<%= link_to 'Logout', logout_path %>
	<% else %>
		<%= link_to 'Login', login_path %>
	<% end %>

</div>


<footer>
	<p>copyright 2015| MGTI</p>
</footer>



</body>
</html>